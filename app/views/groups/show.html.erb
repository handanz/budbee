<div class="container">
  <div class="row">
    <div class="col-8">
      <div class="card-body">
        <div class="card-show">
          <img src="<%= @group.image %>" class="card-img-top" alt="@group.name">
        </div>
      </div>
    </div>
    <div class="col-4">
      <div class="my-4 flex-start">
        <h2 class="card-name">
          <%= @group.name %>
        </h2>
        <p><%= @group.description %></p>
        <h4>City</h4>
        <%= @group.city %>
        <br>
        <br>
        <% @group.users.each do |user| %>
        <h4>Members</h4>
        <%= link_to profile_path(current_user) do %>
        <%= user.first_name %>
        <% end %>| Jonas | Lilly
        <% end %>
        <br>
      </div>
    </div>
  </div>
  <div class="back-button">
    <%= link_to "back", :back, class: "link" %>
  </div>
</div>

