<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1493976040374-85c8e12f0c0e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80)">
  <h2><%= @article.title %></h2>
</div>

<div class="contianer blog-content">
  <div class="row">
    <div class="col-3">
      <div class="text-center">
        <div>
          <%= image_tag (@user.image), class: "profile-avatar mask my-3" %>
        </div>
        <div class="my-3 group-card-link">
          <% if current_user == @user %>
          <%= link_to "Me", profile_path(@user), class: "group-member-link" %>
          <% else %>
          <%= link_to @user.first_name, profile_path(@user), class: "group-member-link" %>
          <% end %>
        </div>
          Published:
        <div class="mt-2">
          <%= @article.created_at.strftime("%F") %>
        </div>
      </div>
    </div>
    <div class="col">
    </div>
    <div class="col-7">
      <p>
        <%= @article.content %>
      </p>
    </div>
    <div class="col">
    </div>
  </div>
</div>
