<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">

  <%= link_to groups_path do %>
   <%= image_tag "logo.png", class: "logo" %>
  <% end %>


  <div class="d-flex">
    <div class="search">
      <%= form_tag groups_path, method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "find a group",
        class: "form-control string required"
      %>
      <% end %>
    </div>
    <%= submit_tag "Search", class: " search-button-navbar" %>
    <div class="vertical-divider"></div>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
        <%= link_to "All groups", groups_path, class: "nav-link budbee-nav-link" %>
        </li>
        <% if current_user.nil? %>

          <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link budbee-nav-link" %>
          </li>
          <li class="nav-item">
          <%= link_to "Register", new_user_registration_path, class: "nav-link budbee-nav-link" %>
          </li>
        <% else %>
          <li class="nav-item dropdown">
            <%= image_tag current_user.image, class: "avatar avatar-navbar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Profile", profile_path(current_user), class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>

  </div>
</div>
