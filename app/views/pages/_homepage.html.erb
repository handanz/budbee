<% content_for :navbar do %>
<%= render "shared/navbar_without_search" %>
<% end %>

<div class="home-video-wrapper">
  <%= video_tag "homepage.mp4", autoplay: :autoplay, loop: :loop, mute: :mute, class: "home-video", preload: :metadata %>
  <div class="banner">
    <div>
      <h1><strong> Brighter Friends, Brighter Future.</strong></h1>
      <div class="text-center d-flex justify-content-center">
        <div class="search search-banner">
          <%= form_tag groups_path, method: :get do %>
          <%= text_field_tag :query,
          params[:query],
          placeholder: "Find a group...",
          class: "inline-form-control string required"
            %>
            <%= submit_tag "Search", class: " search-button-banner" %>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
