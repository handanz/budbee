
<h1>username</h1>
<%= @user.username %>

<h1>user's image</h1>
<%= image_tag (@user.image) %>

<!-- xxxxxxxxxxxxxxxxxxx -->

<h1>user's group</h1>
<% @groups.each do |group| %>
  <%= image_tag (group.image) %>
  <%= group.name %>
  <%= group.city %>
  <br>
  <%= group.description %>
<% end %>

<% @meetings.each do |meeting| %>
  <div class="flex-upcoming-container">
    <h2>Upcoming meetup</h2>
    <!-- meeting card -->
      <%= meeting.title %>
      <%= meeting.time %>
      <%= meeting.description %>
    <% end %>
  </div>
</div>


